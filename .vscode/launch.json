{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "name": "Launch localhost",
            "url": "http://localhost:5000/",
            "pathMappings": [{
                "url": "http://localhost:5000",
                "path": "${workspaceFolder}"
            }]
        },

        {
           "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "cwd": "${workspaceRoot}",
            "env": {
                "FLASK_APP": "wsgi.py",
                "FLASK_ENV": "development",
                // "PYTHONANYWHERE": "true",
                // "CLUBDMX_ROOMPATH": "C:\\Users\\Gunther\\OneDrive\\Programmierung\\clubdmx_rooms",
                "FLASK_DEBUG": "0"
            },
            "args": [
                "run",
                "--no-debugger",
                //"--no-reload",
                "--host=0.0.0.0"
            ],
            "jinja": true
        },
        {
            "name": "Python: Aktuelle Datei",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${workspaceRoot}",
            "env": {
                "PYTHONPATH": "${workspaceRoot};${workspaceRoot}\\dmx"
            }
        }
    ]
}